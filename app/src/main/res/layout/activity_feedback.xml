<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_back_ground"
    android:orientation="vertical">

    <com.fhzc.app.android.android.ui.view.widget.CommonToolBar
        android:id="@+id/systemMessageToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mToolBar_title="意见反馈" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="请选择问题发生的场景"
        android:textColor="#707070" />


    <TextView
        android:id="@+id/bugLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/common_selector_bg"
        android:drawableRight="@drawable/list_tappable"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="23dp"
        android:text="闪退、卡顿或界面错位"
        android:textColor="#46464B"
        android:textSize="16sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px" />


    <TextView
        android:id="@+id/productLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/common_selector_bg"
        android:drawableRight="@drawable/list_tappable"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="23dp"
        android:text="理财产品"
        android:textColor="#46464B"
        android:textSize="16sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <TextView
        android:id="@+id/rightLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/common_selector_bg"
        android:drawableRight="@drawable/list_tappable"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="23dp"
        android:text="会员权益"
        android:textColor="#46464B"
        android:textSize="16sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <TextView
        android:id="@+id/reportLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/common_selector_bg"
        android:drawableRight="@drawable/list_tappable"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="23dp"
        android:text="投研视角"
        android:textColor="#46464B"
        android:textSize="16sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <TextView
        android:id="@+id/activityLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/common_selector_bg"
        android:drawableRight="@drawable/list_tappable"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="23dp"
        android:text="精彩活动"
        android:textColor="#46464B"
        android:textSize="16sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <TextView
        android:id="@+id/myContentLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/common_selector_bg"
        android:drawableRight="@drawable/list_tappable"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="23dp"
        android:text="我的内容"
        android:textColor="#46464B"
        android:textSize="16sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <TextView
        android:id="@+id/chatLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/common_selector_bg"
        android:drawableRight="@drawable/list_tappable"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="23dp"
        android:text="消息、聊天"
        android:textColor="#46464B"
        android:textSize="16sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <TextView
        android:id="@+id/otherLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/common_selector_bg"
        android:drawableRight="@drawable/list_tappable"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="23dp"
        android:text="其他"
        android:textColor="#46464B"
        android:textSize="16sp" />

</LinearLayout>