<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="280dp"
        android:paddingRight="5dp"
        android:layout_height="158dp">
        <com.fhzc.app.android.android.ui.view.widget.RoundImageView
            android:id="@+id/id_index_gallery_item_image"
            android:layout_width="280dp"
            android:scaleType="centerCrop"
            android:layout_height="158dp" />
        <ImageView
            android:visibility="visible"
            android:id="@+id/activity_item_status"
            android:layout_width="@dimen/fifityDp"
            android:layout_height="@dimen/fifityDp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />
    </RelativeLayout>



</LinearLayout>
