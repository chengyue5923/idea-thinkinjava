<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/selected_line_color"
    android:orientation="vertical">

    <com.fhzc.app.android.android.ui.view.widget.CommonToolBar
        android:id="@+id/rightDetailToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:mToolBar_rightImage="@drawable/collect_n"
        app:mToolBar_showRight="true"
        app:mToolBar_title="@string/right_detail"
        app:mToolBar_titleColor="@color/activity_text_color" />

    <LinearLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/ScrollViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/reportImageView"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/timeTextView"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textColor="#787878"
                        android:text="已完成：2016.07.12"
                        android:background="#e0000000"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="13dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="13dp"
                    android:paddingTop="19dp">

                    <TextView
                        android:id="@+id/rightDetailName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-----"
                        android:textColor="@color/selected_main_text"
                        android:textSize="20sp" />
                    <RelativeLayout
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal"
                        android:layout_below="@id/rightDetailName"
                        android:id="@+id/levealline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="黑金卡专享"
                            android:textSize="15sp"
                            android:id="@+id/leavelTextView"
                            android:textColor="#47464c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <View
                            android:layout_marginLeft="@dimen/twentyDp"
                            android:layout_toRightOf="@id/leavelTextView"
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:background="@color/linecolor"
                            android:layout_height="@dimen/line_size"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_marginTop="32dp"
                        android:id="@+id/rightDetailPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/rightDetailName"
                        android:layout_below="@id/levealline"
                        android:paddingTop="5dp"
                        android:text="---"
                        android:textColor="#f48e39"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/rightDetailPoint"
                        android:layout_toRightOf="@id/rightDetailPoint"
                        android:text="/次"
                        android:textColor="@color/selected_deputy_text"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/rightDetailMechanism"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/rightDetailPoint"
                        android:layout_alignParentRight="true"
                        android:text="---"
                        android:textColor="@color/selected_deputy_text"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/rightDetailMechanism"
                        android:layout_toLeftOf="@id/rightDetailMechanism"

                        android:visibility="gone"
                        android:text="服务机构："
                        android:textColor="@color/selected_deputy_text"
                        android:textSize="14sp" />
                </RelativeLayout>

                <LinearLayout
                    android:paddingLeft="16dp"
                    android:paddingTop="20dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:text="取消预约"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#666666"
                        android:layout_marginLeft="@dimen/twentyDp"
                        android:textSize="12sp"
                        android:text="变更预约"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingRight="25dp"
                    android:paddingTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:paddingLeft="13dp"
                        android:text="服务内容"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/rightDetail"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="25dp"
                        android:text="----"

                        android:textColor="@color/selected_main_title"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/bottomlineColor" />

        <RelativeLayout

            android:id="@+id/rightDetailPlannerLay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_fourDp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView
                android:id="@+id/rightDetailShare"
                android:layout_width="@dimen/onehundtwentyfiveDp"
                android:layout_height="@dimen/fourtyfourDp"
                android:layout_centerInParent="true"
                android:background="@drawable/activity_detail_button_bg"
                android:gravity="center"
                android:text="@string/share_for_customer"
                android:textColor="@color/white"
                android:textSize="@dimen/foureenSp" />
        </RelativeLayout>
        <LinearLayout
            android:background="@color/white"
            android:visibility="visible"
            android:id="@+id/singUpRightLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_fiveDp"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_marginRight="@dimen/twelvetyDp"
                    android:layout_marginLeft="@dimen/twelvetyDp"
                    android:layout_marginBottom="@dimen/fiveDp"
                    android:layout_marginTop="@dimen/fiveDp"
                    android:id="@+id/signUpForOtherActivityTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@drawable/activity_detail_button_new_bg"
                    android:gravity="center"
                    android:text="联系理财师"
                    android:textColor="@color/appColorBlue"
                    android:textSize="@dimen/foureenSp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/signUpActivityTextView"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/twelvetyDp"
                    android:layout_marginRight="@dimen/twelvetyDp"
                    android:layout_marginBottom="@dimen/fiveDp"
                    android:layout_marginTop="@dimen/fiveDp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@drawable/activity_detail_button_bg_new"
                    android:gravity="center"
                    android:text="预约权益"
                    android:textColor="@color/white"
                    android:textSize="@dimen/foureenSp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
