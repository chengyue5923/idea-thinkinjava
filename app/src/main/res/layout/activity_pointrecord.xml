<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6eb">
    <com.fhzc.app.android.android.ui.view.widget.CommonToolBar
        android:id="@+id/myOrderRightToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mToolBar_title="积分记录" />
    <include layout="@layout/viewpager_pointtype" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1px"
        android:id="@+id/ll_pr_pointchangerecord"
        >
        <TextView
            android:id="@+id/pointtype"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:textColor="#46464b"
            android:textSize="16sp"
            android:text=""
            android:gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/iv_datepointtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:src="@drawable/date"
            android:visibility="gone"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/lv_pointtyperecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#e6e6eb"
        android:dividerHeight="1px"
        >


    </ListView>


</LinearLayout>