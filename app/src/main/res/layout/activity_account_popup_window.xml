<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:contaxt="com.fhzc.app.android.android.ui.view.dialog.ActivityPopUpDialog">


    <RelativeLayout
        android:gravity="center"
        android:background="@color/appColorBlue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_fiveDp">
        <TextView
            android:gravity="center"
            android:layout_centerInParent="true"
            android:id="@+id/sureSignUpTextView"
            android:textSize="@dimen/sixteenDp"
            android:text="@string/sure_signedup_forothers_detail"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:padding="@dimen/tenDp"
            android:id="@+id/delteforotherImage"
            android:layout_marginRight="@dimen/fiveteenDp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/deleteicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/linecolor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tenDp"></View>
    
    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_fiveDp">
        <TextView
            android:layout_marginLeft="@dimen/sixteenDp"
            android:text="预约客户姓名"
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/foureenSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/nameForOtherEt"
            android:layout_marginRight="@dimen/sixteenDp"
            android:textColorHint="@color/texthintColor"
            android:background="@null"
            android:hint="输入对方姓名"
            android:layout_marginLeft="@dimen/twentyeightdp"
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/foureenSp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="@color/linecolor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"></View>
    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_fiveDp">
        <TextView
            android:layout_marginLeft="@dimen/sixteenDp"
            android:text="预约手机号码"
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/foureenSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/phoneForOtherEt"
            android:layout_marginRight="@dimen/sixteenDp"
            android:textColorHint="@color/texthintColor"
            android:background="@null"
            android:inputType="number"
            android:hint="输入对方手机号"
            android:layout_marginLeft="@dimen/twentyeightdp"
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/foureenSp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="@color/linecolor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"></View>
    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_fiveDp">
        <TextView
            android:layout_marginLeft="@dimen/sixteenDp"
            android:text="输入参加人数"
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/foureenSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/numberForOtherEt"
            android:layout_marginRight="@dimen/sixteenDp"
            android:textColorHint="@color/texthintColor"
            android:background="@null"
            android:hint="输入有几人参加活动"
            android:layout_marginLeft="@dimen/twentyeightdp"
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/foureenSp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="@color/linecolor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"></View>
    <RelativeLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_fiveDp">
        <TextView
            android:id="@+id/codeViews"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sixteenDp"
            android:text="验      证      码"
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/foureenSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.fhzc.app.android.android.ui.view.widget.CountDownTimeButton
            android:layout_centerVertical="true"
            android:id="@+id/countPassText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/sevenDp"
            android:layout_marginRight="@dimen/fiveDp"
            android:layout_marginTop="@dimen/sevenDp"

            android:gravity="center"
            android:paddingTop="@dimen/fiveDp"
            android:paddingBottom="@dimen/fiveDp"
            android:paddingLeft="@dimen/fiveDp"
            android:paddingRight="@dimen/fiveDp"
            android:text="发送验证码"
            android:textColor="@color/appColorBlue"
            android:textSize="@dimen/elevenDp" />
        <EditText
            android:id="@+id/codeForOtherEt"
            android:layout_toLeftOf="@id/countPassText"
            android:layout_toRightOf="@id/codeViews"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/sixteenDp"
            android:textColorHint="@color/texthintColor"
            android:background="@null"
            android:hint="请输入验证码"
            android:layout_marginLeft="@dimen/twentyeightdp"
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/foureenSp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </RelativeLayout>
    <View
        android:background="@color/linecolor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tenDp"></View>
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Eightyfive">
        <TextView
            android:background="@drawable/activity_sure_bg"
            android:text="确认预约"
            android:gravity="center"
            android:id="@+id/sureforOtherButton"
            android:textColor="@color/white"
            android:textSize="@dimen/foureenSp"
            android:layout_width="@dimen/onehundfiftytyDp"
            android:layout_height="@dimen/fourtyfourDp" />
    </RelativeLayout>

</LinearLayout>
