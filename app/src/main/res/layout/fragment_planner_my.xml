<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_back_ground"
    android:orientation="vertical">

    <com.fhzc.app.android.android.ui.view.widget.CommonToolBar
        android:id="@+id/plannerMyToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:mToolBar_rightImage="@drawable/title_message"
        app:mToolBar_showBack="false"
        app:mToolBar_showRight="true"
        app:mToolBar_title="我的" />

    <com.fhzc.app.android.android.ui.view.widget.ScrollViewExtend
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/plannerMyClientLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:background="@drawable/common_selector_bg"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="23dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/list_tappable"
                    android:paddingLeft="0dp"

                    android:text="我的客户"
                    android:textColor="#46464B"
                    android:textSize="16sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:id="@+id/plannerMyWorkLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:background="@drawable/common_selector_bg"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="23dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/list_tappable"
                    android:paddingLeft="0dp"

                    android:text="我的工作"
                    android:textColor="#46464B"
                    android:textSize="16sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px" />

            <LinearLayout
                android:id="@+id/plannerMyCollectLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:background="@drawable/common_selector_bg"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="23dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/list_tappable"
                    android:paddingLeft="0dp"

                    android:text="我的收藏"
                    android:textColor="#46464B"
                    android:textSize="16sp" />


            </LinearLayout>
        </LinearLayout>

    </com.fhzc.app.android.android.ui.view.widget.ScrollViewExtend>
</LinearLayout>