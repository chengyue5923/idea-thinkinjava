<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/tenDp"
        android:background="@color/linecolor">

    </View>

    <LinearLayout
        android:id="@+id/foundationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_selector_bg"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="11dp"
            android:paddingRight="12dp"
            android:paddingTop="@dimen/fiveteenDp">

            <TextView
                android:id="@+id/titleNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="复华奥瑞澳洲机会基金"
                android:textColor="@color/history_product_main_text"
                android:textSize="@dimen/sixteenDp" />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/product_settlement" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fourteenDp"
            android:layout_marginRight="@dimen/fourteenDp"
            android:layout_marginTop="@dimen/twentyDp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/interestNumberLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/interestNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/produceAdapterColor"
                    android:textSize="32sp"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/interestNumber"
                    android:layout_marginTop="@dimen/twoDp"
                    android:text="参考业绩标准"
                    android:textColor="@color/history_product_deputy_text"
                    android:textSize="@dimen/twelvetyDp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/priceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投资金额  100.000.00"
                    android:textColor="@color/history_product_main_text"
                    android:textSize="@dimen/sixteenDp" />

                <LinearLayout
                    android:id="@+id/startPriceLay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/priceText"
                    android:paddingTop="@dimen/fiveteenDp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="认购时间"

                        android:textColor="@color/history_product_main_text"
                        android:textSize="@dimen/twelvetyDp" />

                    <TextView
                        android:id="@+id/startPriceText"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_below="@id/priceText"
                        android:paddingLeft="27dp"
                        android:text=""

                        android:textColor="@color/producetextColor"
                        android:textSize="@dimen/twelvetyDp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/startPriceLay"
                    android:paddingTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/startPriceLay"
                        android:text="预期到账日"
                        android:textColor="@color/history_product_main_text"
                        android:textSize="@dimen/twelvetyDp" />
                    <TextView
                        android:id="@+id/accountdata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:text=""
                        android:textColor="@color/producetextColor"
                        android:textSize="@dimen/twelvetyDp" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/interestProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/twoDp"
            android:layout_marginLeft="@dimen/fourteenDp"
            android:layout_marginRight="@dimen/fourteenDp"
            android:layout_marginTop="@dimen/elevenDps"
            android:background="@drawable/produce_adapter_progress"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/produce_adapter_progress" />

        <TextView
            android:id="@+id/endTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/seventeenSp"
            android:layout_marginRight="@dimen/fourteenDp"
            android:layout_marginTop="@dimen/threeDp"
            android:text=""
            android:textColor="@color/producetextColor"
            android:textSize="@dimen/twelvetyDp" />
    </LinearLayout>
</LinearLayout>
