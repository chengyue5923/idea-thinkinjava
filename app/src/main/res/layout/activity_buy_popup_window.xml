<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:contaxt="com.fhzc.app.android.android.ui.view.dialog.ActivityPopUpDialog">


    <RelativeLayout
        android:gravity="center"
        android:background="@color/appColorBlue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_fiveDp">
        <TextView
            android:gravity="center"
            android:layout_centerInParent="true"
            android:id="@+id/sureSignUpTextView"
            android:textSize="@dimen/sixteenDp"
            android:text="@string/sure_signedup_detail"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:padding="@dimen/tenDp"
            android:id="@+id/delteImage"
            android:layout_marginRight="@dimen/fiveteenDp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/deleteicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    
    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_fiveDp">
        <TextView
            android:layout_marginLeft="@dimen/sixteenDp"
            android:text="活动报名："
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/foureenSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/nameTextViews"
            android:layout_marginLeft="@dimen/tenDp"
            android:text="推荐激情欧洲杯观战活动"
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/foureenSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="@color/linecolor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"></View>
    <LinearLayout
        android:visibility="gone"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_fiveDp">
        <TextView
            android:layout_marginLeft="@dimen/sixteenDp"
            android:text="用户要求："
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/foureenSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/numberText"
            android:layout_marginLeft="@dimen/tenDp"
            android:text="3级及以上用户"
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/foureenSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="@color/linecolor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"></View>
    <RelativeLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_fiveDp">
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sixteenDp"
            android:text="报名人数："
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/foureenSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:background="@drawable/lay_account_bt"
            android:id="@+id/plusAddLayout"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/fifty_fiveDp"
            android:layout_height="match_parent">
            <ImageView
                android:padding="@dimen/fiveteenDp"
                android:id="@+id/plusButton"
                 android:layout_gravity="center"
                android:background="@drawable/plusbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/numberEditTexts"
            android:textSize="@dimen/seventeenSp"
            android:text="1"
            android:textColor="@color/titleTextColor"
            android:gravity="center"
            android:background="@drawable/activity_number_edittext"
            android:layout_toLeftOf="@+id/plusAddLayout"
            android:layout_width="@dimen/seventysevenDp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:background="@drawable/lay_account_bt"
            android:id="@+id/reducelayout"
            android:gravity="center"
            android:layout_toLeftOf="@+id/numberEditTexts"
            android:layout_width="@dimen/fifty_fiveDp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/reduceButton"
                android:layout_centerVertical="true"
                android:background="@drawable/reducebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </RelativeLayout>
    <View
        android:background="@color/linecolor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--<RelativeLayout-->
            <!--android:gravity="center"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="@dimen/Eightyfive">-->
            <!--<TextView-->
                <!--android:background="@drawable/activity_share_bg"-->
                <!--android:gravity="center"-->
                <!--android:text="为他人报名"-->
                <!--android:textSize="@dimen/foureenSp"-->
                <!--android:id="@+id/shareButton"-->
                <!--android:textColor="@color/appColorBlue"-->
                <!--android:layout_width="@dimen/onehundfiftytyDp"-->
                <!--android:layout_height="@dimen/fourtyfourDp" />-->
        <!--</RelativeLayout>-->
        <RelativeLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/Eightyfive">
            <TextView
                android:background="@drawable/activity_sure_bg"
                android:text="确认报名"
                android:gravity="center"
                android:id="@+id/sureButton"
                android:textColor="@color/white"
                android:textSize="@dimen/foureenSp"
                android:layout_width="@dimen/onehundfiftytyDp"
                android:layout_height="@dimen/fourtyfourDp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
