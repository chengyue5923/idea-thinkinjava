<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e6e6eb"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="37dp">

        <TextView
            android:id="@+id/system_msg_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/tt_message_title_time_bg"
            android:padding="6dp"
            android:text="2016-06-30"
            android:textColor="@android:color/white"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/rootLayout"
            android:layout_height="wrap_content"
            android:background="@drawable/common_selector_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/system_msg_item_time"

                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/system_msg_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您购买的复华奥瑞澳洲机会基金已成立"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/system_msg_item_time_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="2016-06-30  11:20"
                    android:textColor="#aeaeb2"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/system_msg_item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingTop="20dp"
                    android:text="李轶女士您好，您购买的复华奥瑞澳洲机会基金已于2016年6月30日成立，具体内容"
                    android:textColor="#666666"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e6e6eb" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/system_msg_item_detail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="查看"
                    android:textColor="#666666"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/list_tappable" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>