<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/selectedRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.fhzc.app.android.android.ui.view.widget.ScrollViewExtend
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/top_image_height">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/top_image_height"
                        android:scaleType="centerCrop"
                        android:src="@drawable/selected_top_image" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/top_service_layout_height"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/top_service_layout_padding_b_t"
                    android:paddingTop="@dimen/top_service_layout_padding_b_t">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="82dp"
                            android:layout_height="12dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/selected_tip"

                            android:textColor="@color/severice_text_color" />
                    </RelativeLayout>


                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="#cccccc" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.8"
                        android:paddingLeft="8dp">

                        <TextView
                            android:id="@+id/tv_report"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/select_tv_dujia_selector"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="独家研报"
                            android:textColor="#005acd"
                            android:textSize="15sp"
                            android:visibility="gone" />

                        <com.fhzc.app.android.android.ui.view.widget.AutoVerticalScrollTextView
                            android:id="@+id/textview_auto_roll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingLeft="8dp"
                            android:text="房地产信托融资模式大揭秘"
                            android:textColor="#505055"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="11dp"
                    android:background="@color/selected_line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/white"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/productLay"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/common_selector_bg">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="31dp"
                                android:layout_height="30dp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="centerInside"
                                android:src="@drawable/selected_product" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:paddingTop="5dp"
                                android:text="@string/product"
                                android:textColor="#505055"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rightLay"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/common_selector_bg">

                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="31dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/righticonback"
                                android:scaleType="centerInside" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:paddingTop="5dp"
                                android:text="权益兑换"
                                android:textColor="#505055"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/activityLay"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/common_selector_bg">

                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="31dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="centerInside"
                                android:src="@drawable/selected_activity" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:paddingTop="5dp"
                                android:text="@string/activity"
                                android:textColor="#505055"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/attentionLay"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/common_selector_bg">

                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="31dp"
                                android:layout_height="30dp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="centerInside"
                                android:src="@drawable/selected_collect" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:paddingTop="5dp"
                                android:text="@string/attention"
                                android:textColor="#505055"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <com.fhzc.app.android.android.ui.view.widget.ImagePagerView
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="147dp"
                    android:background="@null" />

                <!--<RelativeLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:visibility="visible"-->
                <!--android:layout_height="wrap_content">-->

                <!--<com.fhzc.app.android.android.ui.view.widget.AutoScrollViewPager-->
                <!--android:id="@+id/image_slide_page"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="147dp"-->
                <!--android:focusable="true" />-->

                <!--<com.fhzc.app.android.android.ui.view.widget.CirclePageIndicator-->
                <!--android:id="@+id/indicator"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignBottom="@id/image_slide_page"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:padding="@dimen/default_circle_indicator_padding"-->
                <!--android:visibility="visible"-->
                <!--app:fillColor="@color/appColorBlue" />-->
                <!--</RelativeLayout>-->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#e6e6eb" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#97c3ff" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/topProduceLayout"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:background="@drawable/common_selector_bg"
                        android:paddingLeft="12dp"
                        android:paddingRight="20dp">

                        <TextView
                            android:id="@+id/selltv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingBottom="11dp"
                            android:paddingTop="11dp"
                            android:text="@string/selected_product"
                            android:textColor="@color/selected_main_title"
                            android:textSize="@dimen/selected_main_text" />

                        <ImageView
                            android:id="@+id/productRightArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/list_tappable" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/productRightArrow"
                            android:gravity="center_vertical"
                            android:text="专属理财"

                            android:textColor="@color/selected_deputy_title"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#e6e6eb" />

                    <com.fhzc.app.android.android.ui.view.widget.NoScrollListView
                        android:id="@+id/selectedProductLv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="0dp"
                        android:divider="@color/selected_line_color"
                        android:dividerHeight="1px"
                        android:focusable="false"
                        android:listSelector="@drawable/common_selector_bg" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/selected_line_color" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="9dp"
                        android:background="@color/selected_line_color" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#fbd0ad" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:id="@+id/selectedActivityLay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/common_selector_bg"
                            android:paddingLeft="12dp"
                            android:paddingRight="20dp">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="11dp"
                                android:paddingTop="11dp"
                                android:text="精选活动"
                                android:textColor="@color/selected_main_title"
                                android:textSize="@dimen/selected_main_text" />

                            <ImageView
                                android:id="@+id/activityRightArrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/list_tappable" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@id/activityRightArrow"
                                android:text="高端尊享"
                                android:textColor="@color/selected_deputy_title"
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/selected_line_color" />

                        <HorizontalScrollView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="7dp"
                            android:scrollbars="none">

                            <LinearLayout
                                android:id="@+id/activityContainerLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="9dp"
                        android:background="#e6e6eb" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#d4dea5" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:id="@+id/selectedInvestmentLay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/lay_account_bt"
                            android:paddingLeft="12dp"
                            android:paddingRight="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:paddingBottom="11dp"
                                android:paddingTop="11dp"
                                android:text="精选投研"
                                android:textColor="@color/selected_main_title"
                                android:textSize="@dimen/selected_main_text" />

                            <ImageView
                                android:id="@+id/repotRightArrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/list_tappable" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@id/repotRightArrow"
                                android:text="独家视角"
                                android:textColor="@color/selected_deputy_title"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/selected_line_color" />

                        <com.fhzc.app.android.android.ui.view.widget.NoScrollListView
                            android:id="@+id/selectedInvestmentLv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="13dp"
                            android:divider="@color/selected_line_color"
                            android:dividerHeight="1px"
                            android:focusable="false"
                            android:listSelector="@drawable/common_selector_bg" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </com.fhzc.app.android.android.ui.view.widget.ScrollViewExtend>

    </android.support.v4.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/topLay"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="25dp"
        android:paddingBottom="10dp"
        >

        <LinearLayout
            android:id="@+id/personLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/twentyDp">

            <com.fhzc.app.android.android.ui.view.widget.CircleImageView
                android:id="@+id/personInfoIv"
                android:layout_width="@dimen/top_avatar_height_width"
                android:layout_height="@dimen/top_avatar_height_width"
                android:layout_gravity="center_vertical"
                android:src="@drawable/selected_peroninfo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/systemMessageLayout"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@id/messageLayout">

                <TextView
                    android:id="@+id/systemMessageRedImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fiveDp"
                    android:layout_marginTop="@dimen/twentyDp"
                    android:background="@drawable/message_red_circle"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:visibility="gone"
                    android:text="11"
                    />

                <ImageView
                    android:id="@+id/systemMessageIv"
                    android:layout_width="@dimen/top_icon_height_width"
                    android:layout_height="@dimen/top_icon_height_width"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/top_message_padding_right"
                    android:src="@drawable/selected_systemmsg" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/messageLayout"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/messageIv"
                    android:layout_width="@dimen/top_icon_height_width"
                    android:layout_height="@dimen/top_icon_height_width"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@drawable/selected_message" />

                <TextView
                    android:id="@+id/messageRedImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/message_red_circle"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:visibility="visible" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>