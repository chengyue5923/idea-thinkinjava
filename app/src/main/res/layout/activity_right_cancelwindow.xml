<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/thirtyonedp"
    android:layout_marginRight="@dimen/thirtyonedp"
    android:layout_height="wrap_content"
    android:background="@drawable/produce_success_dialog_bg"
    android:orientation="vertical">
    <TextView
        android:paddingTop="@dimen/fiveDp"
        android:layout_centerHorizontal="true"
        android:id="@+id/cancelSignUpTextView"
        android:textSize="@dimen/sixteenSp"
        android:textColor="@color/white"
        android:background="@drawable/right_title_dialog_bg"
        android:gravity="center"
        android:text="取消兑换？"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fiftynineDp" />
    <TextView
        android:layout_marginRight="@dimen/thirtyonedp"
        android:layout_marginLeft="@dimen/thirtyonedp"
        android:id="@+id/contentTextView"
        android:gravity="center"
        android:textColor="@color/titleTextColor"
        android:layout_marginTop="@dimen/fourtyDp"
        android:layout_below="@id/cancelSignUpTextView"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/seventeenDp"
        android:text="若您取消后希望再次兑换，再次点击“兑换权益”即可。"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:weightSum="2"
        android:layout_marginBottom="@dimen/twentyeightdp"
        android:layout_marginTop="@dimen/fourtyDp"
        android:layout_below="@id/contentTextView"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="@dimen/thirtyfivedp">
        <RelativeLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rightnocancelTextView"
                android:background="@drawable/produce_cancel_dialog_bg"
                android:textSize="@dimen/thirteenSp"
                android:gravity="center"
                android:textColor="@color/titleTextColor"
                android:text="@string/cancel_not_password"
                android:layout_width="@dimen/onehundtwentyfiveDp"
                android:layout_height="@dimen/thirtyfivedp" />

        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rightcancelTextView"
                android:background="@drawable/activity_detail_button_bg"
                android:textColor="@color/white"
                android:textSize="@dimen/thirteenSp"
                android:gravity="center"
                android:text="取消兑换"
                android:layout_marginLeft="@dimen/sixDp"
                android:layout_width="@dimen/onehundtwentyfiveDp"
                android:layout_height="@dimen/thirtyfivedp"  />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
