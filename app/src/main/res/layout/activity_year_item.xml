<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backlayoutColor"
    android:orientation="vertical">

    <com.fhzc.app.android.android.ui.view.widget.CommonToolBar
        android:id="@+id/yearToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mToolBar_title="@string/activity_year" />
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fourtyDp">

        <TextView
            android:textColor="@color/backtextColor"
            android:textSize="@dimen/foureenSp"
            android:layout_centerVertical="true"
            android:text="姓名"
            android:layout_marginLeft="@dimen/sixteenDp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/backtextColor"
            android:textSize="@dimen/foureenSp"
            android:layout_centerVertical="true"
            android:text="当月排名"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/sixteenDp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:textColor="@color/backtextColor"
            android:textSize="@dimen/foureenSp"
            android:text="年化业绩(单位：万元)"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/sixteenDp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <ListView
        android:id="@+id/yearList"
        android:scrollbars="none"
        android:dividerHeight="1dp"
        android:divider="@color/backlayoutColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>