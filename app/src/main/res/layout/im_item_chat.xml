<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tt_list_item_bk"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/contact_portrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:scaleType="centerCrop"
            android:src="@drawable/chat_avatar_male" />

        <TextView
            android:id="@+id/message_count_notify"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/contact_portrait"
            android:background="@drawable/message_red_circle"
            android:gravity="center"
            android:minWidth="18dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/contact_portrait"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/contact_portrait"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxEms="12"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:text="李洁洁"
            android:textColor="@color/activity_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/contact_portrait"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@id/contact_portrait"
            android:background="@android:color/transparent"
            android:ellipsize="end"

            android:paddingBottom="3dp"
            android:singleLine="true"
            android:text="复华奥瑞澳洲机会基金复华奥瑞澳洲机..."
            android:textColor="@color/message_body_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/shop_name"
            android:layout_marginRight="12dp"
            android:text="11:04"
            android:textColor="@color/message_time_color"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/tt_divide_line"
        android:paddingTop="1dp" />
    <!-- <TextView
        android:id="@+id/message_divider_footer"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/list_divider_color"
        android:paddingTop="1dp"
        
        android:textColor="@color/message_time_color"
        android:textSize="13sp" /> -->

</LinearLayout>