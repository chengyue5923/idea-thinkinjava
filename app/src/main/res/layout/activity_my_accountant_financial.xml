<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <com.fhzc.app.android.android.ui.view.widget.CommonToolBar
        android:layout_alignParentTop="true"
        android:id="@+id/rightDetailToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mToolBar_background="@color/transparence"
        app:mToolBar_showRight="false"
        app:mToolBar_title="@string/account"
        app:mToolBar_titleColor="@color/activity_text_color" />
    <View
        android:background="@color/linecolor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/oneDp"></View>
    <com.fhzc.app.android.android.ui.view.widget.PullableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.fhzc.app.android.android.ui.view.widget.ListViewForScrollView
                android:visibility="visible"
                android:id="@+id/accountListView"
                android:layout_width="match_parent"
                android:divider="@color/accountcoclor"
                android:dividerHeight="@dimen/oneDp"
                android:layout_height="wrap_content">
            </com.fhzc.app.android.android.ui.view.widget.ListViewForScrollView>
        </LinearLayout>

    </com.fhzc.app.android.android.ui.view.widget.PullableScrollView>


</LinearLayout>
