<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6eb"
    android:orientation="vertical">

    <com.fhzc.app.android.android.ui.view.widget.CommonToolBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mToolBar_title="客户列表" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/clientList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="@color/ht_diverLine"
                android:dividerHeight="1px" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty_fourDp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_size"
                    android:background="@color/bottomlineColor"></View>

                <TextView
                    android:id="@+id/confirmShare"
                    android:layout_width="@dimen/onehundtwentyfiveDp"
                    android:layout_height="@dimen/fourtyfourDp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/activity_detail_button_bg"
                    android:gravity="center"
                    android:text="确认分享"
                    android:textColor="@color/white"
                    android:textSize="@dimen/foureenSp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
