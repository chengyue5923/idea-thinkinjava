<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingRight="13dp"
        android:paddingLeft="11dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/productName"
            android:text="复华奥瑞澳洲机会基金"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rootLayout"

            android:layout_width="720dp"
            android:layout_height="14dp">

            <View
                android:id="@+id/interestProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_margin="1dp"

                android:background="@color/appColorBlue"

                android:progressDrawable="@drawable/produce_adapter_progress" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_margin="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/product_cycle_ripple" />

            <ImageView
                android:id="@+id/grayBg"
                android:layout_width="400dp"

                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/product_cycle_gray" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">



        </RelativeLayout>
    </LinearLayout>


</LinearLayout>